<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".Services">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-- Services --"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="#020202"
                android:textSize="48sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="48dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgbtnRate"
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#6C7070"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon10" />

                <ImageButton
                    android:id="@+id/imgbtnService"
                    android:layout_width="110dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="#6C7070"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="224dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Rate                   Caregiver"
                    android:textAlignment="center"
                    android:textColor="#050000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView28"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Caregiver     Services"
                    android:textAlignment="center"
                    android:textColor="#050000"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="38dp" />

            <ImageButton
                android:id="@+id/imgbtnBill"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:backgroundTint="#6C7070"
                android:scaleType="centerInside"
                android:src="@drawable/bill" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Bill"
                android:textAlignment="center"
                android:textColor="#050000"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>